<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@android:color/holo_blue_dark"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".iDiscovery.MainActivity">


    <Button
        android:id="@+id/btniDiscoveryPage"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:text="Create Activity"
        android:textColor="#000000"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnManageiDiscoveryPage"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btniDiscoveryPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Manage Action"
        android:textColor="#000000"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnListEventPG"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btnManageiDiscoveryPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="List Event PG"
        android:textColor="#000000"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnInsertEventPG"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btnListEventPG"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Insert Event PG"
        android:textColor="#000000"
        android:textSize="25dp" />


</RelativeLayout>
