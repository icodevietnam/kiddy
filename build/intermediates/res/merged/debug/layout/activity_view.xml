<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ViewActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/txtViewId"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/txtViewKiddyName"
        android:layout_below="@+id/txtViewId"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/txtViewKiddyName"
        android:text=""
        android:id="@+id/txtViewKiddyLocation"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/txtViewKiddyDateTime"
        android:layout_below="@+id/txtViewKiddyLocation"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/txtViewKiddyDateTime"
        android:text=""
        android:id="@+id/txtViewKiddyReporterName"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnDeleteKiddy"
        android:text="Delete Activity"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/txtViewKiddyReporterName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnAddReport"
        android:text="Create Report"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/btnDeleteKiddy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnViewReport"
        android:text=" View Report"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/btnAddReport"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
