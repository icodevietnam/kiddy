<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#000000"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_centerInParent="true"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Activity Name:"
        android:id="@+id/txtKiddyName"
        android:layout_marginTop="-10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fffcfd"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textActivityName"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtKiddyName"
        android:height="40dp"
        android:width="150dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location:"
        android:id="@+id/txtLocation"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textActivityName"
        android:layout_centerHorizontal="true"
        android:textColor="#fffcfd"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textLocation"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtLocation"
        android:height="40dp"
        android:width="150dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date:"
        android:layout_below="@+id/textLocation"
        android:id="@+id/txtDate"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fffcfd"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textDate"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtDate"
        android:height="40dp"
        android:width="150dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time:"
        android:layout_below="@+id/textDate"
        android:id="@+id/txtTimeSee"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fffcfd"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTime"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtTimeSee"
        android:height="40dp"
        android:width="150dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reporter Name:"
        android:layout_below="@+id/textTime"
        android:id="@+id/txtWatcherName"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fffcfd"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textReporterName"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtWatcherName"
        android:height="40dp"
        android:width="150dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/btnSave"
        android:text="Save Activity Name"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_below="@+id/textReporterName"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_below="@+id/btnSave"
        android:id="@+id/txtMessage"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
